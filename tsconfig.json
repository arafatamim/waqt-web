{
	"extends": "@tsconfig/svelte/tsconfig.json",
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"resolveJsonModule": true,
		"baseUrl": ".",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
		"allowJs": true,
		"checkJs": true,
    "plugins": [
      { "name": "typescript-svelte-plugin" }
    ]
	},
	"include": [
		"src/**/*.d.ts",
		"src/**/*.ts",
		"src/**/*.js",
		"src/**/*.svelte"
	]
}
